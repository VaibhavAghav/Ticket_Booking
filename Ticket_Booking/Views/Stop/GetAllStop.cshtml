@model IEnumerable<Ticket_Booking.ViewModel.StopViewModel.GetAllStopViewModel>

@{
    ViewData["Title"] = "All Bus Stops";
}

<h2>All Bus Stops</h2>
<hr />
<div class="container p-4">

    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Stops</h2>
        </div>
       
    </div>

    <div class="row mt-3 mb-3">        
        <div class="col-md-6">
            <form asp-action="GetAllStop" asp-controller="Stop" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search by Bus Number" name="busNumber" />
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateStop" asp-controller="Stop">Create new Stop</a>
        </div>
    </div>
    <br />

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Bus Route</th>
                <th>Stop Time</th>
                <th>City</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Id</td>
                    <td>@i.BusNumber</td>
                    <td>@i.StopTime</td>
                    <td>@i.StopCity</td>
                    <td>
                        <a asp-controller="Stop" asp-action="EditStop" asp-route-id="@i.Id" class="btn btn-primary m-1">Edit</a>
                        <a asp-controller="Stop" asp-action="DeleteStop" asp-route-id="@i.Id" class="btn btn-danger m-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>

