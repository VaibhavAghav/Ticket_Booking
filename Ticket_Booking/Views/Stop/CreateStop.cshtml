@model Ticket_Booking.ViewModel.StopViewModel.CreateStopViewModel

@{
    ViewData["Title"] = "Create Stop";
}

<h4>Create Stop</h4>
<hr />

<form enctype="multipart/form-data" asp-action="CreateStop" method="post" class="col-md-6">
    <div class="form-group">
        <label asp-for="BusRouteId" class="control-label"></label>
        <select asp-for="BusRouteId" class="form-control" asp-items="Model.Buses">
            <option value="">Select Bus</option>
        </select>
        <span asp-validation-for="BusRouteId" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="Addcity" class="control-label"></label>
        <select asp-for="Addcity" class="form-control" asp-items="Model.City">
            <option value="">Select Destination City</option>
        </select>
        <span asp-validation-for="Addcity" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="StopTime" class="control-label"></label>
        <input asp-for="StopTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="StopTime" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-controller="Stop" asp-action="GetAllStop" class="btn btn-secondary">Back</a>
    </div>
</form>
