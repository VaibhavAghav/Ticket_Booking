 @using Ticket_Model
 @model IEnumerable<Bus> ;    

 @{
     ViewData["Title"] = "GetAllBuses";
 }

 <h2> All Bus</h2>
 <hr />

 <div class="container p-4">
     <div class="row p-3">
         <div class="col-6">
             <h2 class="text-primary">List of Bus</h2>
         </div>
         <div class="col-6 text-end">
             <a class="btn btn-primary" asp-action="CreateBus" asp-controller="Bus">Create new Bus</a>
         </div>
     </div>
 </div>

 <table id="my Table" class="table table-bordered table-striped" style="width:100%">
     <thead>
         <tr>
             <th>Id</th>
             <th>Bus Number</th>
             <th>Seat Capacity</th>
             <th>Action</th>
         </tr>
     </thead>

     @foreach (var i in Model)
     {
         <tr>
             <td>
                 @i.Id
             </td>
             <td>
                 @i.BusNumber
             </td>
             <td>
                 @i.SeatCapacity
             </td>
             <td>
                 <a asp-controller="Bus" asp-action="EditBus" asp-route-id="@i.Id" class="btn btn-primary m-1">Edit</a>
                <a asp-controller="Bus" asp-action="DeleteBus" asp-route-id="@i.Id" class="btn btn-danger m-1">Delete</a>
             </td>
         </tr>
     }  

 </table>



  