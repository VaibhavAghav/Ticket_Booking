@model Ticket_Booking.ViewModel.BusViewModel.DeleteBusViewModel ;
@{
    ViewData["Title"] = "Delete";
}


<h4>Delete Bus</h4>
<hr />

<form enctype="multipart/form-data" asp-controller="Bus" asp-action="DeleteBus" method="post" class="mt-3">
    
    <input hidden asp-for="Id" />

    @if (ViewBag.ErrorMessage != null)
    {
        <h5 class="text-danger">@ViewBag.ErrorMessage </h5>
        <br />
    }
    else
    {
        <h5 class="text-danger">Do you really want do delete bus </h5>
    }

    <div class="form-group row">
        <label asp-for="BusNumber" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-4">
            <input asp-for="BusNumber" class="form-control" disabled />
            <span asp-validation-for="BusNumber" class="text-danger"> </span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="SeatCapacity" class=" col-sm-2 col-form-label"> </label>
        <div class="col-sm-4">
            <input asp-for="SeatCapacity" class="form-control" disabled />
            <span asp-validation-for="SeatCapacity" class="text-danger"> </span>
        </div>
    </div>
    <br />

    <div>
        <button class="btn btn-danger" type="submit">Delete</button>
        <a asp-controller="Bus" asp-action="GetAllBus" class="btn btn-secondary">Back</a>
    </div>

</form>



