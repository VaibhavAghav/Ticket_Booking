@model Ticket_Booking.ViewModel.BookViewModel.BookTicketViewModel

@{
    ViewData["Title"] = "Book Bus";
}

<h2>Book Bus</h2>
<hr />

<form enctype="multipart/form-data" asp-action="BookBus" method="post" class="mt-3">

    @if (ViewBag.Remain != null)
    {
        <span class="text-danger"> Seat Remain : @ViewBag.Remain</span>
    }

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">
            Name <span class="text-danger">*</span>
        </label>
        <div class="col-sm-4">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="Seats" class="col-sm-2 col-form-label">
            Seats <span class="text-danger">*</span>
        </label>
        <div class="col-sm-4">
            <input asp-for="Seats" class="form-control" />
            <span asp-validation-for="Seats" class="text-danger"></span>
        </div>
    </div>

    <input hidden asp-for="BueRouteId" class="form-control" />
    <input hidden asp-for="BusId" class="form-control" />
    <input hidden asp-for="StartCity" class="form-control" />
    <input hidden asp-for="DestinationCity" class="form-control" />
    <input hidden asp-for="StartTime" class="form-control" />
    <input hidden asp-for="ReachedTime" class="form-control" />

    <br />
    <div class="form-group row">
        <label asp-for="BusId" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-4">
            <input asp-for="BusId" class="form-control" id="busIdField" disabled="disabled" />
            <span asp-validation-for="BusId"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="StartCity" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-4">
            <input asp-for="StartCity" class="form-control" id="startCityField" disabled="disabled" />
            <span asp-validation-for="StartCity"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="DestinationCity" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-4">
            <input asp-for="DestinationCity" class="form-control" id="destinationCityField" disabled="disabled" />
            <span asp-validation-for="DestinationCity"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="StartTime" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-4">
            <input asp-for="StartTime" class="form-control" id="startTimeField" disabled="disabled" />
            <span asp-validation-for="StartTime"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="ReachedTime" class="col-sm-2 col-form-label"> </label>
        <div class="col-sm-4">
            <input asp-for="ReachedTime" class="form-control" id="reachedTimeField" disabled="disabled" />
            <span asp-validation-for="ReachedTime"></span>
        </div>
    </div>
    <br />

    <div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Book" asp-action="BookTicket" class="btn btn-secondary">Back</a>
    </div>
</form>
