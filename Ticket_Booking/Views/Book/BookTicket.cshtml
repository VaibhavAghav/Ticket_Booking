@model Ticket_Booking.ViewModel.BookViewModel.SearchBookTicketViewModel

@{
    ViewData["Title"] = "Book Ticket";
}

<div class="container p-4">
    <div class="row justify-content-center mb-3">
        <div class="col-md-4">
            <label asp-for="FromCityId" class="control-label">From City <span class="text-danger">*</span></label>
            <select id="FromCityId" class="form-control" asp-for="FromCityId" asp-items="Model.Cities">
                <option value="">Select From City</option>
            </select>
            <span asp-validation-for="FromCityId" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="ToCityId" class="control-label">To City <span class="text-danger">*</span></label>
            <select id="ToCityId" class="form-control" asp-for="ToCityId" asp-items="Model.Cities">
                <option value="">Select To City</option>
            </select>
            <span asp-validation-for="ToCityId" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Date" class="control-label">Date <span class="text-danger">*</span></label>
            <input type="date" id="Date" class="form-control" asp-for="Date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>
    <div class="row justify-content-center mb-3">
        <div class="col-md-4 text-center">
            <button id="searchButton" class="btn btn-primary">Search</button>
        </div>
    </div>
    <div id="loading" class="text-center" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <div id="searchResult" class="mt-3"></div>
</div>
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/js/searchBusRoutes.js"></script>
}
