@model Ticket_Booking.ViewModel.CityViewModel.EditCityViewModel ;

@{
    ViewData["Title"] = "EditCity";
}


<h4>Edit City</h4>
<hr />

<form enctype="multipart/form-data" asp-controller="City" asp-action="EditCity" method="post" class="mt-3">
    <input hidden asp-for="Id" />

    <div class="form-group row">
        <label asp-for="CityName" class="col-sm-2 col-form-label">
            City Name <span class="text-danger">*</span>
        </label>
        <div class="col-sm-4">
            <input asp-for="CityName" class="form-control" />
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>
    </div>
    <br />

    <div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="City" asp-action="GetAllCity" class="btn btn-secondary">Back</a>
    </div>
</form>
