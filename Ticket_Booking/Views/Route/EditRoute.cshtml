@model Ticket_Booking.ViewModel.RouteViewModel.EditRouteViewModel;


@{
    ViewData["Title"] = "Edit Route";
}


<h4>Edit Route</h4>
<hr />

<form enctype="multipart/form-data" asp-controller="Route" asp-action="EditRoute" method="post" class="mt-3">
     <input hidden asp-for="Id" /> 

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="@Model.BusId" class="col-sm-2 col-form-label">
            Bus Number <span class="text-danger">*</span>
        </label>
        <div class="col-sm-4">
            <select id="IstBusid" asp-for="@Model.BusId" class="form-control" asp-items="Model.Buses">
                <option value="">Select Bus</option>
            </select>
            <span asp-validation-for="@Model.BusId" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="@Model.StartCityId" class="col-sm-2 col-form-label">
            Start City <span class="text-danger">*</span>
        </label>
        <div class="col-sm-4">
            <select asp-for="@Model.StartCityId" class="form-control" asp-items="@Model.City">
                <option value="">Select Start City</option>
            </select>
            <span asp-validation-for="@Model.StartCityId" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="@Model.DestinationCityId" class="col-sm-2 col-form-label">
            Destination City <span class="text-danger">*</span>
        </label>
        <div class="col-sm-4">
            <select asp-for="@Model.DestinationCityId" class="form-control" asp-items="@Model.City">
                <option value="">Select Destination City</option>
            </select>
            <span asp-validation-for="@Model.DestinationCityId" class="text-danger"></span>
        </div>
    </div>
    <br />

    <div class="form-group row">
        <label asp-for="@Model.StartTime" class="col-sm-2 col-form-label">
            Start Time <span class="text-danger">*</span>
        </label>
        <div class="col-sm-4">
            <input asp-for="@Model.StartTime" class="form-control" />
            <span asp-validation-for="@Model.StartTime" class="text-danger"></span>
        </div>
    </div>
    <br />

    <div class="form-group row">
        <label asp-for="@Model.ReachedTime" class="col-sm-2 col-form-label">
            Reached Time <span class="text-danger">*</span>
        </label>
        <div class="col-sm-4">
            <input asp-for="@Model.ReachedTime" class="form-control" />
            <span asp-validation-for="@Model.ReachedTime" class="text-danger"></span>
        </div>
    </div>
    <br />

    <div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Route" asp-action="GetAllRoute" class="btn btn-secondary">Back</a>
    </div>
</form>



